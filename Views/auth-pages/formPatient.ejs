<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form Patient</title>
  </head>
  <body>
    <div class="container">
      <h1>FORM PATIENT</h1>
      <form action=" /register/users/<%= UsersId %>" method="post">
        <div class="mb-3">
          <label for="exampleInputText1" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <label class="form-label">gender</label>
            <select name="gender" id="gender">
              <option selected disabled>Choose...</option>
              <% const role=["male","female"] %> <% role.forEach(element => { %>
              <option value="<%= element %>"><%= element %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="mb-3">
          <label for="exampleInputText1" class="form-label">Birth Date</label>
          <input type="date" class="form-control" id="birthdate" name="birthdate" />
        </div>
        <div class="mb-3">
          <label for="exampleInputText1" class="form-label">Address</label>
          <input type="text" class="form-control" id="address" name="address" />
        </div>
        <div class="mb-3">
          <label for="exampleInputText1" class="form-label">Phone Number</label>
          <input type="text" class="form-control" id="address" name="phoneNumber" />
        </div>
        <button type="submit" class="btn btn-light border-secondary">Submit</button>
      </form>
      <%- include('bootstrap') %>
    </div>
  </body>
</html>
